<?xml version="1.0"?>

<PropertyList>
  <name>747-200-fuel</name>
  <layout>vbox</layout>

  <text>
    <label>747-200 fuel</label>
  </text>

  <hrule><dummy/></hrule>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>
    <text>
      <label>Tanks filling  ~</label>
      <halign>left</halign>
    </text>
    <combo>
      <pref-width>200</pref-width>
      <property>/systems/fuel/tanks/dialog</property>
      <value alias="/systems/fuel/tanks/filling[0]/comment"/>
      <value alias="/systems/fuel/tanks/filling[1]/comment"/>
      <value alias="/systems/fuel/tanks/filling[2]/comment"/>
    </combo>
  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <checkbox>
    <label>Restore on reinit  ~</label>
    <halign>left</halign>
    <property>/controls/fuel/reinit</property>
    <binding>
      <command>property-toggle</command>
      <property>/controls/fuel/reinit</property>
    </binding>
  </checkbox>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
    <layout>hbox</layout>

    <button>
      <legend>Back</legend>
      <key>b</key>
      <binding>
       <command>dialog-show</command>
       <dialog-name>747-200-menu</dialog-name>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Fill</legend>
      <key>f</key>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>nasal</command>
        <script>globals.Boeing747.fuelsystem.menuexport();</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>
</PropertyList>

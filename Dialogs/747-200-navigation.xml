<?xml version="1.0"?>

<!-- Computations supposed to be done by the flight engineer. Also needed for debug :

     - fuel at waypoint checks FDM.
     - gal/h checks fuel pumping : should not change during a fuel transfer.
-->


<PropertyList>
  <name>747-200-navigation</name>
  <layout>vbox</layout>
  <width>450</width>

  <text>
    <label>747-200 navigation</label>
  </text>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
      <label>Fuel at waypoint (gal)</label>
    </text>

    <group>
      <layout>hbox</layout>

      <text>
       <halign>left</halign>
       <live>true</live>
       <property>/autopilot/route-manager/wp[0]/id</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>

      <text>
       <live>true</live>
       <property>/systems/engineer/navigation/wp[0]/fuel-gal_us</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>
    </group>

    <group>
      <layout>hbox</layout>

      <text>
       <halign>left</halign>
       <live>true</live>
       <property>/autopilot/route-manager/wp[1]/id</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>

      <text>
       <live>true</live>
       <property>/systems/engineer/navigation/wp[1]/fuel-gal_us</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>
    </group>

    <group>
      <layout>hbox</layout>

      <text>
       <halign>left</halign>
       <live>true</live>
       <property>/autopilot/route-manager/wp-last/id</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>

      <text>
       <live>true</live>
       <property>/systems/engineer/navigation/wp[2]/fuel-gal_us</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>
    </group>
  </group>

  <text>
    <label></label>
  </text>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
     <label>Fuel consumption (gal/h)</label>
     <color>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
     </color>
    </text>

    <text>
     <live>true</live>
     <property>/instrumentation/fuel/fuel-flow-gal_us_ph</property>
     <color>
      <red>0.2</red>
      <green>0.8</green>
      <blue>0.2</blue>
     </color>
    </text>
  </group>

  <text>
    <label></label>
  </text>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
     <label>Rate (ft/minute) to reach</label>
    </text>

    <group>
      <layout>hbox</layout>

      <text>
       <live>true</live>
       <property>/autopilot/route-manager/wp[0]/id</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>

      <text>
       <live>true</live>
       <property>/systems/engineer/navigation/wp[0]/speed-fpm</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>
    </group>

    <group>
      <layout>hbox</layout>

      <text>
       <live>true</live>
       <property>/autopilot/route-manager/wp[1]/id</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>

      <text>
       <live>true</live>
       <property>/systems/engineer/navigation/wp[1]/speed-fpm</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>
    </group>

    <group>
      <layout>hbox</layout>

      <text>
       <live>true</live>
       <property>/autopilot/route-manager/wp-last/id</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>

      <text>
       <live>true</live>
       <property>/systems/engineer/navigation/wp[2]/speed-fpm</property>
       <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
       </color>
      </text>
    </group>

    <text>
     <label>at acquired altitude (ft)</label>
     <color>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
     </color>
    </text>

    <text>
     <live>true</live>
     <property>/controls/autoflight/dial-altitude-ft</property>
     <color>
      <red>0.2</red>
      <green>0.8</green>
      <blue>0.2</blue>
     </color>
    </text>

    <text>
     <label></label>
    </text>

    <text>
     <label>last waypoint at</label>
     <color>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
     </color>
    </text>

    <input>
     <halign>left</halign>
     <property>/controls/engineer/destination-ft</property>
     <label>ft</label>
    </input>
  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
    <legend>Back</legend>
    <key>b</key>
    <binding>
      <command>dialog-apply</command>
    </binding>
    <binding>
     <command>dialog-show</command>
     <dialog-name>747-200-menu</dialog-name>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

   <button>
    <legend>Close</legend>
    <default>true</default>
    <key>Esc</key>
    <binding>
      <command>dialog-apply</command>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>
  </group>
</PropertyList>
